{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "nodenext",
        "rootDir": "src",
        "declarationDir": "lib/types",
        "esModuleInterop": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "noEmitOnError": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
