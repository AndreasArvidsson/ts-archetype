{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES6",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "outDir": "out",
        "esModuleInterop": true,
        "noEmit": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "jsx": "react-jsx"
    },
    "include": ["src"]
}
