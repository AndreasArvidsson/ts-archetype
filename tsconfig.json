{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "lib",
        "declarationDir": "lib/types",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true
    },
    "include": ["src"]
}
